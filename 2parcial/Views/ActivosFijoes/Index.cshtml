@model IEnumerable<_2parcial.ActivosFijo>

@{
    ViewBag.Title = "Index";
}

<div class="p-2" style="display:flex; justify-content:space-between; align-items:center;">
    <h2>Lista de Activos Fijos</h2>

    <a href='@Url.Action("Create", "ActivosFijoes")' class="optionUpBtn text-light bg-success">
        <i class="fas fa-plus"></i>
        Crear Activos Fijos
    </a>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepreAcumulada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamento.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoDeActivo.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepreAcumulada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDeActivo.Descripcion)
            </td>
            <td class="d-flex gap-2">
                <a href='@Url.Action("Edit", "ActivosFijoes" , new { id = item.AFijoID })' class="optionUpBtn text-light bg-warning">
                    <i class="fas fa-plus"></i>
                    Editar
                </a>
                <a href='@Url.Action("Details", "ActivosFijoes" , new { id = item.AFijoID })' class="optionUpBtn text-light bg-secondary">
                    <i class="fas fa-info"></i>
                    Detalles
                </a>
                <a href='@Url.Action("Delete", "ActivosFijoes" , new { id = item.AFijoID })' class="optionUpBtn text-light bg-danger">
                    <i class="fas fa-trash-alt"></i>
                    Eliminar
                </a>
            </td>
        </tr>
    }

</table>
